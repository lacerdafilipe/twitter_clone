<%= render 'header', user: @user %>

<div class="row">
  <div class="col s9 offset-s2">
    <div class="container">
      <div class="row white count_tweet">
        <div class="col s4"><p><%= @user.tweets.count %></p> <p>Tweets</p></div>
        <div class="col s4"><p><%= @user.followers_count %></p> <p>Followers</p></div>
        <div class="col s4"><p><%= @user.follow_count %></p> <p>Following</p></div>
      </div>
    </div>
    
    <div class="container">
        <div class="row white tweet">
            <div class="col s12">
            <% current_user.followers.each do |follower| %>
                <div class="row">
                    <div class="col s12">
                        <%= image_tag(follower.avatar_url(:thumbnail), :width => 50, :height => 50, :class => "circle") %>
                        <p><%= link_to follower.name, main_path(follower) %></p>
                    </div>
                </div>
                <hr>
            <% end %>
            </div>
        </div>
    </div>
    
  </div>
</div>
